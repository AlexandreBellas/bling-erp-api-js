{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "transformIgnorePatterns": [
    "/node_modules/",
    "\\.pnp\\.[^\\\/]+$"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/lib/"
  ],
  "maxWorkers": 1,
  "maxConcurrency": 2
}