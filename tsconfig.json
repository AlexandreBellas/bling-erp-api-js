{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "outDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@helpers/*": ["./src/helpers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
